{
  "name": "fresh-pack",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "typecheck": "turbo typecheck",
    "update:major": "taze -r major -w",
    "update:minor": "taze -r minor -w"
  },
  "devDependencies": {
    "@fresh-pack/eslint-config": "workspace:*",
    "@fresh-pack/typescript-config": "workspace:*",
    "husky": "~8.0.3",
    "lint-staged": "~15.2.0",
    "prettier": "~3.1.1",
    "prettier-plugin-tailwindcss": "~0.5.9",
    "sort-package-json": "~2.6.0",
    "taze": "~0.13.0",
    "turbo": "~1.11.2",
    "typescript": "~5.3.3"
  },
  "packageManager": "pnpm@8.12.1",
  "engines": {
    "node": "^20.0.0"
  }
}
